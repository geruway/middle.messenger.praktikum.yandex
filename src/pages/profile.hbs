{{!< main}}

<div id="profile">
    <div class="profile_back">
        <a href="/"></a>
    </div>
    <main class="profile_container">
        <div class="profile_form">
            <div class="avatar avatar_big">
                <div class="placeholder">Поменять<br>аватар</div>
                <img src="/static/avatar.png" alt="">
            </div>
            <h1 class="login">Иван</h1>
            <ul class="fields lines">
                {{#each fields as | field |}}
                <li class="field">
                    <div class="label">{{field.label}}</div>
                    <div class="value">{{field.value}}</div>
                </li>
                {{/each}}
            </ul>
            <ul class="actions lines">
                <li><a href="profile-update.hbs">Изменить данные</a></li>
                <li><a href="change-password.hbs">Изменить пароль</a></li>
                <li class="exit"><a href="/">Выйти</a></li>
            </ul>
        </div>
    </main>
</div>
